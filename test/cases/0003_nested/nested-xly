#! /usr/bin/env bash

set -eu

case $ORDERLY_ACTION in
  RUN)
    exec ${BIN_DIR}/orderly -check-delay 60 -status-file nested.status \
      -- -name sv3 -all-commands ${SCRIPTS_DIR}/sv \
      -- -name sv4 -all-commands ${SCRIPTS_DIR}/sv 
  ;;
  WAIT_STARTED)
    while true
    do
      sleep 0.5
      if test -f nested.status && test $(cat nested.status) = "RUNNING"
      then
        exit 0
      fi
    done
  ;;
  CHECK)
    test -f nested.status && test $(cat nested.status) = "RUNNING"
  ;;
  SHUTDOWN)
    kill -SIGINT "$ORDERLY_RUN_PID"
  ;;
  CLEANUP)
    rm -f nested.status
  ;;
  *)
    echo "unknown action: $ORDERLY_ACTION"
    exit 1
  ;;
esac
